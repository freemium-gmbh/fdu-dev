						<Border CornerRadius="3"
								BorderThickness="1,0,1,1">
							<Border.BorderBrush>
								<LinearGradientBrush EndPoint="0.5,1"
													 StartPoint="0.5,0">
									<GradientStop Color="#615F5F"
												  Offset="1" />
									<GradientStop Color="#797575" />
								</LinearGradientBrush>
							</Border.BorderBrush>
							<Border BorderThickness="0,1,0,0"
									BorderBrush="#C8C4C4">
								<Border.Background>
									<LinearGradientBrush EndPoint="0.5,1"
														 StartPoint="0.5,0">
										<GradientStop Color="#3B3838"
